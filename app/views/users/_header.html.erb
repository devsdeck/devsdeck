<div class="ui secondary  menu">
  <%= render "shared/header_logo"%>
  <div class="right menu">
    <div class="item">
      <% if current_user %>
        <%= link_to "New Card",new_card_path, class: "ui  red item"%>
        <div class="ui icon input">

        </div>
        <div class="ui item">
          <span><%= link_to user_path(current_user), class: "ui item" do %>
            <img class="ui avatar image" src="<%= avatar_url(current_user) %>">
            <%= current_user.email %>
          <% end %>
          </span>
        </div>
    </div>
    <div class="ui right dropdown item">
      <i class="sidebar icon"></i>
      <div class="menu">
        <%= link_to "https://githubwcom/hosseintoussi/devsdeck/issues/new", class: "ui item" do %>
          <i class="mail icon"></i>
          Feedback
        <% end %>

        <%= link_to destroy_user_session_path, method: :delete, class: "ui item" do %>
          <i class="sign out icon"></i>
          Log out
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div>
</div>
