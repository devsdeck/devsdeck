<% if current_user %>
  <%= link_to card_like_path(card),
    method: liked ? :delete : :post,
    remote: true,
    title: "Like Heart" do %>
  <% if liked %>
    <i class="heart red like icon"></i>
  <% else %>
    <i class="heart outline like icon"></i>
  <% end%>
<% end %>
<% else %>
  <i class="heart outline like icon"></i>
<% end %>
<%= card.cached_votes_up %>
